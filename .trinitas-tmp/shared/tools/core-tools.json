{
  "base_tools": {
    "description": "Core tools available to all personas",
    "tools": [
      "Read",
      "Grep",
      "Glob",
      "TodoWrite"
    ],
    "security_level": "low"
  },
  
  "editing_tools": {
    "description": "File modification capabilities",
    "tools": [
      "Write",
      "Edit",
      "MultiEdit"
    ],
    "security_level": "medium",
    "restrictions": {
      "allowed_paths": ["./src", "./docs", "./tests"],
      "forbidden_paths": [".env", "*.key", "*.pem", "/etc"]
    }
  },
  
  "execution_tools": {
    "description": "Command execution capabilities",
    "tools": [
      "Bash",
      "BashOutput",
      "KillBash"
    ],
    "security_level": "high",
    "restrictions": {
      "timeout": 30000,
      "sandbox": true,
      "forbidden_commands": ["rm -rf /", "sudo", "chmod 777"]
    }
  },
  
  "search_tools": {
    "description": "Advanced search capabilities",
    "tools": [
      "WebSearch",
      "WebFetch",
      "Task"
    ],
    "security_level": "medium"
  },
  
  "mcp_tools": {
    "description": "MCP server integration tools",
    "tools": [
      "ListMcpResourcesTool",
      "ReadMcpResourceTool",
      "mcp__*"
    ],
    "security_level": "low"
  }
}