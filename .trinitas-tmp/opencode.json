{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5-20250929",
  "theme": "dark",
  "agent": {
    "default": {
      "name": "athena",
      "description": "Harmonious conductor - primary agent for architecture and coordination"
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "rm -rf /*": "deny",
      "sudo rm -rf": "deny",
      "dd if=": "deny",
      "mkfs": "deny",
      ":(){:|:&}": "deny"
    },
    "webfetch": "ask"
  },
  "mcp": {
    "tmws": {
      "type": "local",
      "command": ["python", "-m", "tmws.mcp.server"],
      "enabled": false,
      "environment": {
        "TMWS_DATABASE_URL": "postgresql://localhost:5432/tmws",
        "TMWS_REDIS_URL": "redis://localhost:6379",
        "TMWS_AGENT_AUTO_DETECT": "true",
        "TMWS_AGENT_NAMESPACE": "trinitas",
        "PYTHONPATH": "${HOME}/workspace/tmws:${PYTHONPATH}"
      }
    },
    "quality-guardian": {
      "type": "local",
      "command": ["bash", "${HOME}/.claude/guard/scripts/guard_command.sh"],
      "enabled": false,
      "environment": {
        "TRINITAS_GUARD_ENABLED": "true",
        "TRINITAS_GUARD_MODE": "warn"
      }
    }
  },
  "keybinds": {
    "switch_agent": "tab",
    "session_child_cycle": "ctrl+right",
    "session_child_cycle_reverse": "ctrl+left"
  }
}
