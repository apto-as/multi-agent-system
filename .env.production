# ==============================================
# TMWS Production Environment Template
# Copy to .env and customize for your deployment
# ==============================================

# CRITICAL: Replace ALL placeholder values with actual secrets!

# Database Configuration (Required)
POSTGRES_DB=tmws
POSTGRES_USER=tmws_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION_$(openssl rand -base64 32 | tr -d "=+/" | cut -c1-32)
POSTGRES_PORT=5432

# Redis Configuration (Required)
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION_$(openssl rand -base64 32 | tr -d "=+/" | cut -c1-32)
REDIS_PORT=6379

# Application Secrets (Required)
TMWS_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_$(openssl rand -base64 32)

# Application Configuration
TMWS_ENVIRONMENT=production
TMWS_LOG_LEVEL=INFO
TMWS_API_HOST=0.0.0.0
TMWS_API_PORT=8000

# Agent Configuration
TMWS_AGENT_ID=artemis-optimizer
TMWS_AGENT_NAMESPACE=production
TMWS_ALLOW_DEFAULT_AGENT=false

# Security Configuration (Production)
TMWS_AUTH_ENABLED=true
TMWS_RATE_LIMIT_REQUESTS=100
TMWS_RATE_LIMIT_PERIOD=60

# Vector/Embedding Configuration
TMWS_EMBEDDING_MODEL=all-MiniLM-L6-v2
TMWS_VECTOR_DIMENSION=384

# Performance Configuration
WORKERS=4
MAX_WORKERS=8

# Storage Paths (Docker Production)
DATA_PATH=/var/lib/tmws
LOG_PATH=/var/log/tmws

# Nginx/Ingress Configuration
TMWS_PORT=8000

# Monitoring Configuration
GRAFANA_PASSWORD=CHANGE_ME_IN_PRODUCTION_$(openssl rand -base64 16 | tr -d "=+/")

# Optional: Registry Configuration
REGISTRY=your-registry.example.com/tmws

# Optional: Domain Configuration  
DOMAIN=tmws.example.com