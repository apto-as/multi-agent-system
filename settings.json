{
  "env": {
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "false",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "true",
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "true",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_MICROCOMPACT": "true",
    "DISABLE_INTERLEAVED_THINKING": "true"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python %USERPROFILE%\.claude\hooks\core\protocol_injector.py session_start",
            "description": "Inject TRINITAS-CORE-PROTOCOL.md at session start"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python %USERPROFILE%\.claude\hooks\core\protocol_injector.py pre_compact",
            "description": "Inject protocol reminder before context compression"
          }
        ]
      }
    ]
  },
  "disableAllHooks": false
}
