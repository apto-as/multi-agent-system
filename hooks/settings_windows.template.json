{
  "description": "Windows Hooks - Protocol Injection (v2.1.0)",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"{{PROJECT_PATH}}\\hooks\\core\\protocol_injector.py\" session_start",
            "description": "Inject TRINITAS-CORE-PROTOCOL.md at session start"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"{{PROJECT_PATH}}\\hooks\\core\\protocol_injector.py\" pre_compact",
            "description": "Inject protocol reminder before context compression"
          }
        ]
      }
    ]
  }
}