{
  "description": "Trinitas Global Hooks Configuration (v2.2.4)",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"{{GLOBAL_CONFIG_DIR}}/hooks/core/dynamic_context_loader.py\"",
            "description": "Dynamic context loading based on persona detection"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"{{GLOBAL_CONFIG_DIR}}/hooks/core/protocol_injector.py\" pre_compact",
            "description": "Inject protocol reminder before context compression"
          }
        ]
      }
    ]
  }
}
