# TMWS Production Environment Template
# ====================================
# SECURITY CRITICAL: Review all settings before deployment
# Copy to .env and update ALL values marked with TODO

# ==== CRITICAL CONFIGURATION (MUST SET) ====
# TODO: Set to production database with SSL
TMWS_DATABASE_URL=postgresql://tmws_prod:CHANGE_PASSWORD@prod-db-host:5432/tmws_prod?sslmode=require

# TODO: Generate secure 32+ character key
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
TMWS_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_32_CHAR_RANDOM_KEY

# Production environment (enforced)
TMWS_ENVIRONMENT=production

# ==== API SERVER CONFIGURATION ====
# Bind to internal interface, use reverse proxy
TMWS_API_HOST=127.0.0.1
TMWS_API_PORT=8000
TMWS_API_RELOAD=false
TMWS_API_TITLE=TMWS - Production
TMWS_API_VERSION=2.2.0

# ==== WEBSOCKET MCP CONFIGURATION ====
TMWS_WS_ENABLED=true
TMWS_WS_HOST=127.0.0.1
TMWS_WS_PORT=8001
TMWS_WS_MAX_CONNECTIONS=200
TMWS_WS_PING_INTERVAL=30
TMWS_WS_PING_TIMEOUT=15
TMWS_WS_MAX_MESSAGE_SIZE=1048576

# ==== STDIO MCP CONFIGURATION ====
TMWS_STDIO_ENABLED=true
TMWS_STDIO_FALLBACK=true

# ==== SECURITY CONFIGURATION (CRITICAL) ====
# Authentication MANDATORY in production
TMWS_AUTH_ENABLED=true
TMWS_JWT_ALGORITHM=HS256
TMWS_JWT_EXPIRE_MINUTES=30
TMWS_JWT_REFRESH_EXPIRE_DAYS=7

# TODO: Set specific origins for production
TMWS_CORS_ORIGINS=["https://your-frontend-domain.com"]
TMWS_CORS_CREDENTIALS=false
TMWS_CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
TMWS_CORS_HEADERS=["Content-Type", "Authorization"]

# Security headers (mandatory in production)
TMWS_SECURITY_HEADERS_ENABLED=true
TMWS_SESSION_COOKIE_SECURE=true
TMWS_SESSION_COOKIE_HTTPONLY=true
TMWS_SESSION_COOKIE_SAMESITE=strict

# Strict CSP for production
TMWS_CSP_ENABLED=true
TMWS_CSP_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' wss:; frame-ancestors 'none'; object-src 'none'

# Rate limiting (strict in production)
TMWS_RATE_LIMIT_ENABLED=true
TMWS_RATE_LIMIT_REQUESTS=100
TMWS_RATE_LIMIT_PERIOD=60
TMWS_MAX_LOGIN_ATTEMPTS=5
TMWS_LOCKOUT_DURATION_MINUTES=15

# ==== DATABASE CONFIGURATION ====
TMWS_DB_MAX_CONNECTIONS=50
TMWS_DB_ECHO_SQL=false  # Never log SQL in production
TMWS_DB_POOL_PRE_PING=true
TMWS_DB_POOL_RECYCLE=3600

# ==== LOGGING & MONITORING ====
TMWS_LOG_LEVEL=INFO
TMWS_LOG_FORMAT=json
TMWS_SECURITY_LOG_ENABLED=true
TMWS_AUDIT_LOG_ENABLED=true

# Optional: Production log file
TMWS_LOG_FILE=/var/log/tmws/app.log

# ==== PERFORMANCE & CACHING ====
TMWS_CACHE_TTL=3600
TMWS_CACHE_MAX_SIZE=2000

# ==== VECTORIZATION ====
TMWS_EMBEDDING_MODEL=all-MiniLM-L6-v2
TMWS_VECTOR_DIMENSION=384
TMWS_MAX_EMBEDDING_BATCH_SIZE=32

# ==== REDIS CONFIGURATION ====
# TODO: Set production Redis with authentication
TMWS_REDIS_URL=redis://:CHANGE_PASSWORD@prod-redis-host:6379/0

# ==== OPTIONAL PRODUCTION FEATURES ====
# Metrics collection
# TMWS_METRICS_ENABLED=true
# TMWS_METRICS_PORT=9090

# External monitoring
# TMWS_PROMETHEUS_ENABLED=true
# TMWS_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# SSL/TLS Configuration (if not using reverse proxy)
# TMWS_SSL_CERT_FILE=/path/to/cert.pem
# TMWS_SSL_KEY_FILE=/path/to/key.pem

# ==== SECURITY CHECKLIST ====
# Before deploying to production, verify:
# [ ] Database uses SSL connection
# [ ] Secret key is cryptographically secure
# [ ] CORS origins are explicitly set (no wildcards)
# [ ] Rate limiting is appropriately configured
# [ ] Security headers are enabled
# [ ] SSL/TLS is properly configured
# [ ] Audit logging is enabled
# [ ] No debug information exposed
# [ ] All passwords use strong credentials
# [ ] Firewall rules restrict access appropriately