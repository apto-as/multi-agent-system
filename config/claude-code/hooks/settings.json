{
  "description": "Trinitas Global Hooks Configuration (v2.4.0 - PreToolUse/PostToolUse Added)",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"~/.claude/hooks/core/dynamic_context_loader.py\"",
            "description": "Dynamic context loading based on persona detection"
          },
          {
            "type": "command",
            "command": "python3 \"~/.claude/hooks/core/decision_check.py\"",
            "description": "TMWS: Decision classification and memory recording"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"~/.claude/hooks/core/task_persona_injector.py\"",
            "description": "Inject persona narratives for SubAgent Task invocations"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"~/.claude/hooks/core/persona_reminder_hook.py\"",
            "description": "Periodic persona reminder + Trust Recording for SubAgents"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"~/.claude/hooks/core/protocol_injector.py\" pre_compact",
            "description": "Inject protocol reminder before context compression"
          },
          {
            "type": "command",
            "command": "python3 \"~/.claude/hooks/core/precompact_memory_injection.py\"",
            "description": "TMWS: Inject relevant past memories before compaction"
          }
        ]
      }
    ]
  }
}
