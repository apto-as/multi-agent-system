# TMWS Development Environment Configuration
# ===========================================
# This file contains development-specific settings
# Copy to .env for local development use

# ==== CRITICAL CONFIGURATION (REQUIRED) ====
TMWS_DATABASE_URL=postgresql://tmws_dev:dev_password@localhost:5432/tmws_dev
TMWS_SECRET_KEY=dev-only-key-change-in-production-32chars-minimum
TMWS_ENVIRONMENT=development

# ==== API SERVER CONFIGURATION ====
TMWS_API_HOST=127.0.0.1
TMWS_API_PORT=8000
TMWS_API_RELOAD=true
TMWS_API_TITLE=TMWS - Development Mode
TMWS_API_VERSION=2.2.0

# ==== WEBSOCKET MCP CONFIGURATION ====
TMWS_WS_ENABLED=true
TMWS_WS_HOST=127.0.0.1
TMWS_WS_PORT=8001
TMWS_WS_MAX_CONNECTIONS=50
TMWS_WS_PING_INTERVAL=20
TMWS_WS_PING_TIMEOUT=10
TMWS_WS_MAX_MESSAGE_SIZE=1048576

# ==== STDIO MCP CONFIGURATION ====
TMWS_STDIO_ENABLED=true
TMWS_STDIO_FALLBACK=true

# ==== SECURITY CONFIGURATION ====
# Authentication disabled in development
TMWS_AUTH_ENABLED=false
TMWS_JWT_ALGORITHM=HS256
TMWS_JWT_EXPIRE_MINUTES=60
TMWS_JWT_REFRESH_EXPIRE_DAYS=7

# CORS - Permissive for development
TMWS_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000", "http://127.0.0.1:8080"]
TMWS_CORS_CREDENTIALS=true
TMWS_CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
TMWS_CORS_HEADERS=["Content-Type", "Authorization", "X-Requested-With", "Accept"]

# Security headers (relaxed for development)
TMWS_SECURITY_HEADERS_ENABLED=true
TMWS_SESSION_COOKIE_SECURE=false  # Allow HTTP in development
TMWS_SESSION_COOKIE_HTTPONLY=true
TMWS_SESSION_COOKIE_SAMESITE=lax

# CSP (permissive for development)
TMWS_CSP_ENABLED=true
TMWS_CSP_POLICY=default-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' ws: wss: http: https:

# Rate limiting (generous in development)
TMWS_RATE_LIMIT_ENABLED=true
TMWS_RATE_LIMIT_REQUESTS=1000
TMWS_RATE_LIMIT_PERIOD=60
TMWS_MAX_LOGIN_ATTEMPTS=10
TMWS_LOCKOUT_DURATION_MINUTES=5

# ==== DATABASE CONFIGURATION ====
TMWS_DB_MAX_CONNECTIONS=20
TMWS_DB_ECHO_SQL=true  # Show SQL queries in development
TMWS_DB_POOL_PRE_PING=true
TMWS_DB_POOL_RECYCLE=7200

# ==== LOGGING & MONITORING ====
TMWS_LOG_LEVEL=DEBUG
TMWS_LOG_FORMAT=text
TMWS_SECURITY_LOG_ENABLED=true
TMWS_AUDIT_LOG_ENABLED=true

# ==== PERFORMANCE & CACHING ====
TMWS_CACHE_TTL=1800  # 30 minutes
TMWS_CACHE_MAX_SIZE=500

# ==== VECTORIZATION ====
TMWS_EMBEDDING_MODEL=all-MiniLM-L6-v2
TMWS_VECTOR_DIMENSION=384
TMWS_MAX_EMBEDDING_BATCH_SIZE=16

# ==== DEVELOPMENT-SPECIFIC FEATURES ====
# Enable hot reload
TMWS_HOT_RELOAD=true

# Enable debugging features
TMWS_DEBUG_MODE=true

# Development ports
TMWS_DEBUG_PORT=5678

# Test database for integration tests
TMWS_TEST_DATABASE_URL=postgresql://tmws_test:test_password@localhost:5432/tmws_test

# Redis for development
TMWS_REDIS_URL=redis://localhost:6379/0

# ==== OPTIONAL OVERRIDES ====
# Uncomment to customize further

# Custom log file location
# TMWS_LOG_FILE=logs/tmws_dev.log

# Custom embedding model for experiments
# TMWS_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# Performance testing settings
# TMWS_STRESS_TEST_ENABLED=false
# TMWS_BENCHMARK_MODE=false