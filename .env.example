# TMWS v2.2.0 Environment Configuration
# ======================================
# Shared Server for Multiple Claude Code Instances
# Copy this file to .env and customize for your environment

# ==== BASIC CONFIGURATION ====
TMWS_ENVIRONMENT=development
TMWS_API_VERSION=2.2.0

# ==== AGENT CONFIGURATION ====
TMWS_AGENT_ID=athena-conductor
TMWS_AGENT_NAMESPACE=trinitas
TMWS_ALLOW_DEFAULT_AGENT=true

# ==== DATABASE (Required) ====
# PostgreSQL with pgvector extension
TMWS_DATABASE_URL=postgresql://tmws_user:tmws_password@localhost:5432/tmws

# ==== SHARED SERVER ====
# API server (supports WebSocket MCP)
TMWS_API_HOST=0.0.0.0  # Allow multi-client connections
TMWS_API_PORT=8000
TMWS_API_RELOAD=false

# Enable WebSocket MCP for multiple Claude Code instances
TMWS_WS_ENABLED=true
TMWS_WS_MAX_CONNECTIONS=100

# Enable stdio MCP for direct connections
TMWS_STDIO_ENABLED=true
TMWS_MCP_ENABLED=true

# ==== SECURITY ====
# Secret key (32+ characters for production)
TMWS_SECRET_KEY=dev-secret-key-change-in-production

# Authentication (disabled for development)
TMWS_AUTH_ENABLED=false

# CORS (allow all for development)
TMWS_CORS_ORIGINS=["*"]

# Rate limiting (disabled for development)
TMWS_RATE_LIMIT_ENABLED=false

# ==== LOGGING ====
TMWS_LOG_LEVEL=INFO
TMWS_LOG_FORMAT=text

# ==== VECTOR DATABASE ====
TMWS_EMBEDDING_MODEL=all-MiniLM-L6-v2
TMWS_VECTOR_DIMENSION=384